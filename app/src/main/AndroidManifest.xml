<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.smarthome" >

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DeviceManagerActivity"
            android:label="@string/activity_device_manager" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ThermostatActivity" />
        <activity android:name=".AirConditionActivity"/>
        <activity android:name=".RefrigeratorActivity" />
        <activity android:name=".WasherActivity" />
        <activity android:name=".DishwasherActivity" />
        <activity android:name=".CookerActivity" />
        <activity android:name=".StoveActivity" />
        <activity android:name=".LocksActivity" />
        <activity android:name=".LightsActivity" />
        <activity android:name=".LightsControlActivity" />
    </application>

</manifest>